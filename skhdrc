# focus window
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - l : yabai -m window --focus east

# move window
ctrl + shift - h : yabai -m window --warp west
ctrl + shift - j : yabai -m window --warp south
ctrl + shift - k : yabai -m window --warp north
ctrl + shift - l : yabai -m window --warp east

# swap window
ctrl + alt + shift - h : yabai -m window --swap west
ctrl + alt + shift - j : yabai -m window --swap south
ctrl + alt + shift - k : yabai -m window --swap north
ctrl + alt + shift - l : yabai -m window --swap east

# increase window size
ctrl + alt - u : yabai -m window --resize right:-20:0 || yabai -m window --resize left:-20:0
ctrl + alt - i : yabai -m window --resize bottom:0:20 || yabai -m window --resize top:0:20
ctrl + alt - o : yabai -m window --resize bottom:0:-20 || yabai -m window --resize top:0:-20
ctrl + alt - p : yabai -m window --resize right:20:0 || yabai -m window --resize left:20:0

# decrease window size
ctrl + shift - u : yabai -m window --resize left:-20:0 || yabai -m window --resize right:-20:0 
ctrl + shift - i : yabai -m window --resize top:0:20 || yabai -m window --resize bottom:0:20 
ctrl + shift - o : yabai -m window --resize top:0:-20 || yabai -m window --resize bottom:0:-20
ctrl + shift - p : yabai -m window --resize left:20:0 || yabai -m window --resize right:20:0 |

# move window
ctrl + alt + shift - u : yabai -m window --move rel:-20:0
ctrl + alt + shift - i : yabai -m window --move rel:0:20
ctrl + alt + shift - o : yabai -m window --move rel:0:-20
ctrl + alt + shift - p : yabai -m window --move rel:20:0

# set insertion point in focused container
ctrl + alt - v : yabai -m window --insert west
ctrl + alt - b : yabai -m window --insert south
ctrl + alt - n : yabai -m window --insert north
ctrl + alt - m : yabai -m window --insert east

# rotate tree clockwise
ctrl + alt - return : yabai -m space --rotate 270

# rotate tree counter-clockwise
ctrl + alt + shift - return : yabai -m space --rotate 90

# balance size of windows
ctrl + shift - return : yabai -m space --balance

# float / unfloat window and center on screen
ctrl + alt - backspace : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2

# make floating window fill screen
ctrl + alt - up : yabai -m window --grid 1:1:0:0:1:1

# make floating window fill left-half of screen
ctrl + alt - left : yabai -m window --grid 1:2:0:0:1:1

# make floating window fill right-half of screen
ctrl + alt - right : yabai -m window --grid 1:2:1:1:1:1

# toggle window split type
ctrl + shift - backspace : yabai -m window --toggle split

# toggle picture-in-picture
ctrl + alt + shift - backspace : yabai -m window --toggle sticky; yabai -m window --toggle topmost; yabai -m window --toggle pip

# mirror tree y-axis '['
ctrl + alt - 0x21 : yabai -m space --mirror y-axis

# mirror tree x-axis ']'
ctrl + alt - 0x1E : yabai -m space --mirror x-axis

# toggle window parent zoom '\'
ctrl + alt - 0x2A : yabai -m window --toggle zoom-parent

# toggle desktop offset '0'
ctrl + alt - 0 : yabai -m space --padding abs:0:0:0:0

# toggle window offset '0'
ctrl + shift - 0 : yabai -m space --gap abs:0

# toggle window and desktop offset '0'
ctrl + alt + shift - 0 : yabai -m space --gap abs:0 && yabai -m space --padding abs:0:0:0:0

# decrease padding between desktop '-'
ctrl + alt - 0x18 :yabai -m space --padding rel:5:5:5:5

# decrease padding between windows '-'
ctrl + alt - 0x18 : yabai -m space --gap rel:5

# decrease padding between windows and desktop '-'
ctrl + alt + shift - 0x18 : yabai -m space --gap rel:5 && yabai -m space --padding rel:5:5:5:5

# increase padding between desktop '+'
ctrl + alt - 0x1B : yabai -m space --padding rel:-5:-5:-5:-5

# increase padding between windows '+'
ctrl + alt - 0x1B : yabai -m space --gap rel:-5

# increase padding between windows and desktop '+'
ctrl + alt + shift - 0x1B : yabai -m space --gap rel:-5 && yabai -m space --padding rel:-5:-5:-5:-5

# toggle sticky, topmost and picture-in-picture
ctrl + alt + shift - 1 : yabai -m window --toggle sticky
ctrl + alt + shift - 2 : yabai -m window --toggle topmost
ctrl + alt + shift - 3 : yabai -m window --toggle pip

# create desktop, move window and follow focus - uses jq for parsing json (brew install jq)
ctrl + alt - t : yabai -m space --create && \
                  index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                  yabai -m window --space "${index}" && \
                  yabai -m space --focus "${index}" && \
                  open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh'

# create desktop and follow focus - uses jq for parsing json (brew install jq)
ctrl + shift - t : yabai -m space --create && \
                index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                yabai -m space --focus "${index}" && \
                open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh'

# destroy desktop
ctrl + alt - w : yabai -m space --destroy && open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh'; yabai -m window --focus recent

# fast focus desktop
ctrl - left : open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh' && yabai -m space --focus prev || skhd -k "ctrl + cmd - left" && open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh' 
ctrl - right : open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh' && yabai -m space --focus next || skhd -k "ctrl + cmd - right" && open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh' 

# send window to desktop and follow focus
ctrl + shift - left : yabai -m window --space prev && open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh'
ctrl + shift - right : yabai -m window --space next && open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh'

# send window to monitor and follow focus
ctrl + alt - left : yabai -m window --display prev && open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh'
ctrl + alt - right : yabai -m window --display next && open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh'

# Move space left
ctrl + alt + shift - left : yabai -m space --move prev && open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh'

# Move space right
ctrl + alt + shift - right : yabai -m space --move next && open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh'

# focus monitor
alt - tab : yabai -m display --focus next && open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh'
alt + shift - tab : yabai -m display --focus prev && open -gj 'bitbar://refreshPlugin?name=yabai.1d.sh'

# reload yabai and skhdrc
ctrl + alt + shift - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai" && skhd --reload
